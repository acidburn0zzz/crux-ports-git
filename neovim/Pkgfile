# Description: Vim's rebirth for the 21st century - git checkout
# URL:         https://github.com/neovim/neovim
# Packager:    Luiz de Milon, kori at openmailbox dot org
# Maintainer:  Luiz de Milon, kori at openmailbox dot org
# Depends on:  git cmake libuv luajit msgpack-c msgpack-lua lua-bitop lua-lpeg

name=neovim
version=git
release=1
source=(use-legacy-float-names.patch)

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q; git reset --hard origin/master
	else
		git clone https://github.com/neovim/neovim $name
		cd $name
	fi

	patch < $SRC/use-legacy-float-names.patch
	cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr

	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/locale
	rm -rf $PKG/usr/share/nvim/runtime/{autoload,colors,compiler,ftplugin,indent,keymap,plugin,syntax,tools}/*README.txt
	rm -rf $PKG/usr/share/nvim/runtime/{doc,vimrc_example.vim}
}
