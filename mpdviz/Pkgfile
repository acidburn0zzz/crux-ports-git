# Description:  Standalone console MPD visualizer (git checkout)
# URL:          https://github.com/lucy/mpdviz
# Packager:     Luiz de Milon, kori at openmailbox dot org
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports/issues
# Depends on:   git go fftw 

name=mpdviz
version=git
release=1
source=()

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q; git reset --hard origin/master
	else
		git clone https://github.com/lucy/mpdviz $name
		cd $name
	fi

	export GOPATH="$SRC"

	go get -d
	go clean
	go build -o mpdviz

	install -Dm755 mpdviz $PKG/usr/bin/mpdviz
}
