# Description: Lightweight uploader for teknik.io. (git checkout)
# URL:         https://github.com/6c37/tek
# Packager:    Luiz de Milon, kori at openmailbox dot org
# Maintainer:  Luiz de Milon, kori at openmailbox dot org
# Depends on:  git go

name=tek
version=git
release=1
source=()

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q; git reset --hard origin/master
	else
		git clone https://github.com/6c37/tek.git $name
		cd $name
	fi

	export GOPATH="$SRC"

	go get -d
	go clean
	go build -o tek

	install -Dm755 tek $PKG/usr/bin/tek
}
