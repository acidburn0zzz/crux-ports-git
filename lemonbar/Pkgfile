# Description: A featherweight, lemon-scented bar based on xcb  (git checkout)
# URL:         http://github.com/LemonBoy/bar/
# Packager:    onodera, onodera at openmailbox dot org
# Maintainer:  6c37 Team, https://github.com/6c37/crux-ports/issues
# Depends on:  git xorg-libxcb

name=lemonbar
version=git
release=1
source=()

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q; git reset --hard origin/master
	else
		git clone git://github.com/LemonBoy/bar $name
		cd $name
	fi

	make all doc
	install -Dm755 lemonbar   $PKG/usr/bin/lemonbar
	install -Dm644 lemonbar.1 $PKG/usr/man/man1/lemonbar.1
}
