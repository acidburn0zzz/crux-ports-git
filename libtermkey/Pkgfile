# Description: Abstract library implementation of a VT220/xterm/ECMA-48 terminal emulator - neovim fork
# URL:         https://github.com/neovim/libtermkey
# Packager:    Luiz de Milon, kori at openmailbox dot org
# Maintainer:  Luiz de Milon, kori at openmailbox dot org
# Depends on:  unibilium

name=libtermkey
version=git
release=1
source=()

build() {
	cd $PKGMK_SOURCE_DIR

	if cd $name; then
		git fetch -q; git reset --hard origin/master
	else
		git clone https://github.com/neovim/libtermkey $name
		cd $name
	fi

	make
	make PREFIX="/usr" MANDIR="/usr/man" DESTDIR=${PKG} install
}
