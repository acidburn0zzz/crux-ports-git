# Description:  Utility for viewing and editing tags for MP3, FLAC, Ogg Vorbis, etc.
# URL:          http://projects.gnome.org/easytag
# Packager:     onodera, onodera at openmailbox dot org
# Maintainer:   onodera, onodera at openmailbox dot org
# Depends on:   gtk id3lib itstool
# Nice to have: flac libvorbis

name=easytag
version=2.2.5
release=1
source=(https://download.gnome.org/sources/$name/2.2/$name-$version.tar.xz)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--mandir=/usr/man \
		--libexecdir=/usr/lib \
		--disable-nls

	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share
}
